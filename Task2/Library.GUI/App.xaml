<Application x:Class="Library.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Library.GUI.Views"
             xmlns:viewModels="clr-namespace:Library.GUI.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:ClientListViewModel}">
            <views:ClientListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:BookListViewModel}">
            <views:BookView />
        </DataTemplate>
    </Application.Resources>
</Application>
